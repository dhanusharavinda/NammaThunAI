OPENAI_API_KEY=your_openai_key_here

# Choose a chat model that supports strong Tamil output
OPENAI_CHAT_MODEL=gpt-4o

# Whisper STT model
OPENAI_STT_MODEL=whisper-1

# OpenAI TTS model + voice
OPENAI_TTS_MODEL=tts-1
OPENAI_TTS_VOICE=alloy

# Backend server config
BACKEND_HOST=127.0.0.1
BACKEND_PORT=8000

# Frontend origin for CORS
FRONTEND_ORIGIN=http://localhost:5173

# Optional (Windows): OCR dependencies
# If `tesseract` is not on PATH, point directly to the exe:
# TESSERACT_CMD=C:\Program Files\Tesseract-OCR\tesseract.exe
TESSERACT_CMD=
#
# Optional (Windows): needed for OCR on scanned PDFs (pdf2image)
# POPPLER_PATH=C:\Program Files\poppler\Library\bin
POPPLER_PATH=

# Deployment safety limits
MAX_INPUT_CHARS=2000
RATE_LIMIT_PER_MINUTE=5
FOLLOWUP_LIMIT=5
